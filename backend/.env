# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# JWT Secret Key (change this to a random secret key)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (SQLite for simplicity - no MySQL setup needed)
DATABASE_URL=sqlite:///finance_dashboard.db

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# CORS Origins
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000
